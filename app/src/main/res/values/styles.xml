<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_hi</item>
        <item name="colorPrimaryDark">@color/orange_hi</item>
        <item name="colorAccent">@color/orange_hi</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="font_f_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white_hi</item>
    </style>

    <style name="font_f_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_hi</item>
    </style>

    <style name="font_f_30">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white_hi</item>
    </style>
    <style name="font_3_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/c_3</item>
    </style>
    <style name="MyEditTextLine" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_hi</item>
        <item name="colorControlActivated">@color/orange_hi</item>
    </style>

    <style name="font_orange_13">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/orange_hi</item>
    </style>
    <style name="font_orange_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/orange_hi</item>
    </style>

    <style name="font_c3_30">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/c_3</item>
    </style>


    <style name="div_hor_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_hi</item>
    </style>
    <style name="font_9_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_9</item>
    </style>

    <style name="font_3_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_3</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              android:paddingLeft="20dp"
              android:paddingRight="20dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@mipmap/ic_logo"/>

    <TextView
        style="@style/font_orange_18"
        android:layout_margin="6dp"
        android:gravity="center"
        android:text="嬉购验票系统"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_login_account"
        style="@style/font_3_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="60dp"
        android:hint="请输入账号"
        android:singleLine="true"
        android:theme="@style/MyEditTextLine"/>


        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_login_password"
            style="@style/font_3_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:hint="请输入密码"
            android:theme="@style/MyEditTextLine"/>



    <com.kingja.supershapeview.view.SuperShapeTextView

        android:id="@+id/stv_login_confirm"
        style="@style/font_f_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="登录"
        app:super_cornerRadius="5dp"
        app:super_solidColor="@color/orange_hi"/>


</LinearLayout>